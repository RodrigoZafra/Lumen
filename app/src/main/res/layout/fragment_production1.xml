<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".productionFragments.Production1">

    <androidx.cardview.widget.CardView
        android:id="@+id/cvProductionDay1"
        android:backgroundTint="@color/azul_blanquecino"
        android:layout_margin="20dp"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        app:layout_constraintTop_toTopOf="parent"
        app:cardCornerRadius="10dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iconProductionDay1"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_margin="10dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_chart_columns"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center_vertical"
                >

                <TextView
                    android:id="@+id/plainTextProductionDay1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Estructura de la generación"
                    android:textSize="15sp"
                    android:paddingTop="15dp"
                    android:textAlignment="center"
                    android:layout_margin="10dp"
                    android:layout_weight="1"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/cvAPITitleProductionDay1"
                        style="@style/Theme.Numbers"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginTop="10dp"
                        android:layout_weight="4"
                        android:text="200.123"
                        android:textAlignment="textEnd"
                        android:textColor="@color/white" />

                    <TextView
                        android:id="@+id/plainTextMWhProductionDay1"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        style="@style/Theme.Numbers"
                        android:layout_marginTop="10dp"
                        android:text=" - MWh"
                        android:textAlignment="textStart"
                        android:layout_weight="1"
                        android:textColor="@color/white"
                        />
                </LinearLayout>


            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cvProductionDay2"
        android:layout_margin="20dp"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:backgroundTint="@color/azul_blanquecino"
        app:layout_constraintTop_toBottomOf="@id/cvProductionDay1"
        app:cardCornerRadius="10dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iconProductionDay2"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_margin="10dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_chart_columns"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center_vertical"
                >

                <TextView
                    android:id="@+id/plainTextProductionDay2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Generación renovable"
                    android:paddingTop="15dp"
                    android:textSize="15sp"
                    android:textAlignment="center"
                    android:layout_margin="10dp"
                    android:layout_weight="1"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal">


                    <TextView
                        android:id="@+id/plainTextConsumptionMonthMax"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        style="@style/Theme.Numbers"
                        android:textColor="@color/white"
                        android:text="Max:"
                        android:textAlignment="textEnd"
                        android:layout_weight="3"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="5dp"
                        />

                    <TextView
                        android:id="@+id/cvAPITitleProductionDay2"
                        style="@style/Theme.Numbers"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginTop="10dp"
                        android:layout_weight="3"
                        android:text="500.123"
                        android:textAlignment="textEnd"
                        android:textColor="@color/white" />

                    <TextView
                        android:id="@+id/plainTextMWhProductionDay2"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        style="@style/Theme.Numbers"
                        android:layout_marginTop="10dp"
                        android:text=" - MWh"
                        android:textAlignment="textStart"
                        android:layout_weight="1"
                        android:textColor="@color/white"
                        />
                </LinearLayout>


            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cvProductionDay3"
        android:layout_margin="20dp"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:backgroundTint="@color/azul_blanquecino"
        app:layout_constraintTop_toBottomOf="@id/cvProductionDay2"
        app:cardCornerRadius="10dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iconProductionDay3"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_margin="10dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_chart_frag_columns"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center_vertical"
                >

                <TextView
                    android:id="@+id/plainTextProductionDay3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Porcentaje de emisiones"
                    android:paddingTop="15dp"
                    android:textSize="15sp"
                    android:textAlignment="center"
                    android:layout_margin="10dp"
                    android:layout_weight="1"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal">


                    <TextView
                        android:id="@+id/plainTextConsumptionMonthMax3"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        style="@style/Theme.Numbers"
                        android:textColor="@color/white"
                        android:text="Max:"
                        android:textAlignment="textEnd"
                        android:layout_weight="3"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="5dp"
                        />

                    <TextView
                        android:id="@+id/cvAPITitleProductionDay3"
                        style="@style/Theme.Numbers"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginTop="10dp"
                        android:layout_weight="3"
                        android:text="500.123"
                        android:textAlignment="textEnd"
                        android:textColor="@color/white" />

                    <TextView
                        android:id="@+id/plainTextMWhProductionDay3"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        style="@style/Theme.Numbers"
                        android:layout_marginTop="10dp"
                        android:text=" - MWh"
                        android:textAlignment="textStart"
                        android:layout_weight="1"
                        android:textColor="@color/white"
                        />
                </LinearLayout>


            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>