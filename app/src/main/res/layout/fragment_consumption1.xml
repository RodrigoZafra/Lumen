<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".consumptionFragments.Consumption1">


    <androidx.cardview.widget.CardView
        android:id="@+id/cvConsumptionDay1"
        android:backgroundTint="@color/azul_blanquecino"
        android:layout_margin="20dp"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        app:layout_constraintTop_toTopOf="parent"
        app:cardCornerRadius="10dp"
    >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iconConsumptionDay1"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_margin="10dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_chart_lines"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center_vertical"
                >

                <TextView
                    android:id="@+id/plainTextConsumptionDay1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Consumo actual de energÃ­a"
                    android:textSize="15sp"
                    android:textAlignment="center"
                    android:layout_margin="10dp"
                    android:layout_weight="1"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/cvAPITitleConsumptionDay1"
                        style="@style/Theme.Numbers"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_margin="10dp"
                        android:layout_weight="4"
                        android:text="200.123"
                        android:textAlignment="textEnd"
                        android:textColor="@color/white" />

                    <TextView
                        android:id="@+id/plainTextMWhConsumptionDay1"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        style="@style/Theme.Numbers"
                        android:layout_margin="10dp"
                        android:text="-  MWh"
                        android:textAlignment="textStart"
                        android:layout_weight="1"
                        android:textColor="@color/white"
                        />
                </LinearLayout>


            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cvConsumptionDay2"
        android:layout_margin="20dp"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:backgroundTint="@color/azul_blanquecino"
        app:layout_constraintTop_toBottomOf="@id/cvConsumptionDay1"
        app:cardCornerRadius="10dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iconConsumptionDay2"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_margin="10dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_chart_pie"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center_vertical"
                >

                <TextView
                    android:id="@+id/plainTextConsumptionDay2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Consumo diario"
                    android:textSize="15sp"
                    android:textAlignment="center"
                    android:layout_margin="10dp"
                    android:layout_weight="1"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/cvAPITitleConsumptionDay2"
                        style="@style/Theme.Numbers"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_margin="10dp"
                        android:layout_weight="4"
                        android:text="200.123"
                        android:textAlignment="textEnd"
                        android:textColor="@color/white" />

                    <TextView
                        android:id="@+id/plainTextMWhConsumptionDay2"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        style="@style/Theme.Numbers"
                        android:layout_margin="10dp"
                        android:text="-  MWh"
                        android:textAlignment="textStart"
                        android:layout_weight="1"
                        android:textColor="@color/white"
                        />
                </LinearLayout>


            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>