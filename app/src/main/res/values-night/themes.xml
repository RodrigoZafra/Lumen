<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Lumen" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/amarillo_blanquecino</item>
        <item name="colorPrimaryVariant">@color/azul_oscuro</item>
        <item name="colorOnPrimary">@color/azul_oscuro</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/amarillo_blanquecino</item>
        <item name="colorSecondaryVariant">@color/amarillo_blanquecino</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:radius">20dp</item>
        <item name="fontFamily">@font/cocogoose</item>
    </style>
</resources>